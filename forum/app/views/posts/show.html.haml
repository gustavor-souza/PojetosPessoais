#post_content
  %h2= @post.title

  %p= @post.content

  #comments
    %h2
      = @post.comments.count
      Comments
    = render @post.comments

  %h3 Reply to thread
  = render 'comments/form'

  %br/
  %hr/
  %br/
  = link_to 'back', :root
  = link_to 'edit', edit_post_path
  = link_to 'delete', @post, method: :delete, data: {confirm: 'Are you sure?'}

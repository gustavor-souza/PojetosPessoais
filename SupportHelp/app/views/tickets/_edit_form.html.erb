<%= form_for @ticket, remote: true do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :Título %><br>
    <%= f.text_field ticket.title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Sistema %><br>
    <%= f.text_field ticket.system.name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Assunto %><br>
    <%= f.text_field ticket.subject.title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Prioridade %><br>
    <%= f.collection_select :priority_id,
      @priority,:id,:description, {include_blank: 'Selecione...'},
      {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :Solicitante %><br>
    <%= f.text_field ticket.client.name, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.fields_for :comments do |f2|%>
    <%= f2.label :Descrição %><br>
    <%= f2.text_area(:content,  {class: "form-control"}) %>
    <%= f2.hidden_field :user_id, value: current_user.id %>
  <% end %>
  </div>

  <%= f.hidden_field :client_id, value: current_user.id %>

  <div class="actions">
    <%= f.submit "Abrir Chamado", class: "btn btn-info" %>
  </div>

<% end %>

#jobs
  .job
    %h2= @job.title
    %p= @job.description
    %p= @job.company
    = link_to "Apply for Job", @job.url, class: "btn btn-default"

#links
= link_to "home", root_path, class: "btn btn-sm btn-default"
= link_to "edit", edit_job_path, class: "btn btn-sm btn-default"
= link_to "delete", @job, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-default"
